{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./node_modules/@types/react-table/index.d.ts",
    "build",
  ]
}
